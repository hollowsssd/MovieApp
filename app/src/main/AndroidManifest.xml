<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.movieapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo2"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp"


        tools:targetApi="31">

        <!-- SplashActivity (Hiển thị đầu tiên) -->
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- IntroActivity -->
        <activity
            android:name=".Activities.IntroActivity"
            android:exported="true" />

        <!-- RegisActivity -->
        <activity
            android:name=".Activities.RegisActivity"
            android:exported="true" />

        <!-- MainActivity -->
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />

        <!-- LoginActivity -->
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="true" />

        <!-- UsersActivity -->
        <activity
            android:name=".Activities.AdminListUsersActivity"
            android:exported="true" />

        <!-- UsersCreate -->
        <activity
            android:name=".Activities.AdminAddUserActivity"
            android:exported="true" />


        <!-- AdminActivity -->
        <activity
            android:name=".Activities.AdminActivity"
            android:exported="true" />

        <activity
            android:name=".Activities.MediaActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"

            />
        <activity android:name=".Activities.DetailMovieActivity"
            android:exported="true"
         />

        <activity android:name=".Activities.AdminAddMovieActivity"
            android:exported="true"
        />

        <activity android:name=".Activities.AdminListMoviesActivity"
            android:exported="true"
            />
        <activity android:name=".Activities.AdminDetailMoviesActivity"
            android:exported="true"
            />
        <activity android:name=".Activities.AdminDetailUsersActivity"
            android:exported="true"
            />

        <activity android:name=".Activities.ManageAccountActivity"
            android:exported="true"
            />
        <activity android:name=".Activities.favoriteactivity"
            android:exported="true"
            />









    </application>

</manifest>
